<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F6F8">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F57C00"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:background="@android:color/white"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuhu The Annapurna Multigrain's &amp; Spice's"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="331,Vill Sabli Hapur, Uttar Pradesh 245101"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9412121383"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anujtyagihpr@gmail.com"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ================= TITLE ================= -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INVOICE ENTRY"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#F57C00"
        android:padding="12dp" />

    <!-- ================= SCROLLABLE AREA ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- CUSTOMER DETAILS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="14dp"
                android:elevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Customer Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Address"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/etCustomerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Address" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/etCustomerMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Mobile Number"
                    android:inputType="phone" />
            </LinearLayout>

            <!-- PRODUCT ENTRY -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="14dp"
                android:layout_marginTop="12dp"
                android:elevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Product"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spProduct"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_bg"
                    android:spinnerMode="dropdown"
                    android:popupBackground="#FFFFFF"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity(in kg)"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/etQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Enter Quantity in kg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/etRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Enter Rate" />

                <Button
                    android:id="@+id/btnAddItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Item"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#F57C00"
                    android:layout_marginTop="14dp" />
            </LinearLayout>

            <!-- TABLE HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4.1"
                android:background="#F57C00"
                android:padding="8dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Sr"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Product"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:text="Qty"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="end"
                    android:text="Rate"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Amount"
                    android:textStyle="bold"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerItems"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

            <!-- TOTAL -->
            <!-- TOTAL ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4.1"
                android:background="#FFF3E0"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Total"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTotalProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Items: 0"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTotalQty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:text="0"
                    android:textColor="#1976D2"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTotalRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="end"
                    android:text="0"
                    android:textColor="#388E3C"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="0.00"
                    android:textStyle="bold"
                    android:textColor="#F57C00"
                    android:fontFamily="monospace"/>

            </LinearLayout>

            <!-- DISCOUNT & NET AMOUNT SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:elevation="3dp">

                <!-- DISCOUNT INPUT -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discount (-₹)"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etDiscount"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:gravity="end"
                        android:background="@android:drawable/edit_text"/>
                </LinearLayout>

                <!-- NET AMOUNT -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:background="#FFF3E0"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Net Amount"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvNetAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 0.00"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#F57C00"/>
                </LinearLayout>

            </LinearLayout>



            <Button
                android:id="@+id/btnGeneratePdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate PDF"
                android:backgroundTint="#2E7D32"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>